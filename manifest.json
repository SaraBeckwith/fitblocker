{
    "manifest_version": 2,
    
    "name": "My frankenstension",
    "description": "This will eventually allow so much access to blocked sites based on FitBit activity",
    "version": "1.0",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs"
    ]
}